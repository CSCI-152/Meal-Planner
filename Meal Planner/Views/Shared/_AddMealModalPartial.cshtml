@model MealPlanAddModel
<div class="modal fade" id="addMealModal" tabindex="-1" role="dialog" aria-labelledby="addMealModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addMealModalLabel">Add to meal plan</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="javascript:void(0);" id="add-to-planner" method="post">
                <span id="loading" style="display:none;"> <i class="fas fa-spinner fa-spin"></i></span>
                <div class="modal-body">
                    <div class="form-group">
                        <div class="input-group">
                            <label asp-for="Meal.Servings" class="mx-1 my-1"></label>
                            <input asp-for="Meal.Servings" class="form-control" value="1" min="1" max="10">
                            <span asp-validation-for="Meal.Servings" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <label asp-for="Slot" class="mx-1 my-1">Meal Type</label>
                            <select class="form-control" asp-for="Slot" aria-label="Select the meal type">
                                <option value="1">Breakfast</option>
                                <option value="2" selected>Lunch</option>
                                <option value="3">Dinner</option>
                            </select>
                            <span asp-validation-for="Slot" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group date" type="date" data-provide="datepicker">
                            <label asp-for="Date" class="mx-1 my-1">Meal Date</label>
                            <input class="form-control" type="date" asp-for="Date" value="@DateTime.Now">
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" asp-for="Meal.Id" id="modal-recipe-id" />
                    <input type="hidden" asp-for="Meal.Title" id="modal-recipe-title" />
                    <input type="hidden" asp-for="Meal.Image" id="meal-image" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button class="btn btn-primary" id="save-to-planner">Add to plan</button>
                </div>
            </form>
        </div>
    </div>
</div>