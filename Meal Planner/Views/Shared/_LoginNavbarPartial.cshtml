@using Microsoft.AspNetCore.Identity
@using Meal_Planner.Models
@inject SignInManager<UserModel> SignInManager
@inject UserManager<UserModel> UserManager


    <style>
        .navbar-nav li {
            background-color: #ffffff;
            border: 1px solid #e0e0e0;
            margin-left: 3px;
            margin-right: 3px;
        }

        .navbar-nav > li > a:focus,
        .navbar-nav > li > a:hover {
            background-color: #c0f6d2;
        }
    </style>

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Dashboard">Dashboard (test)</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Diet" asp-action="DietSelect">Select Diet</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Recipe" asp-action="Index">Search Recipes</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="MealPlan" asp-action="Index">Meal Planner</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Dashboard">Not Logged Test</a>
    </li>
}
